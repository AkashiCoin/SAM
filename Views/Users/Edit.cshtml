    <script type="text/javascript">

        $(document).ready(function () {
            getRoles();
            //$('input[type="radio"]').fancybutton();
            $("#btnSave").click(function () {
                save();
            });
        });

        function getRoles() {
            var url = "/User/Roles";
            $.post(
                url,
                {

                },
                function (data, status) {
                    //debugger;
                    console.log("数据: \n" + data + "\n状态: " + status);
                    var sel = document.getElementById("RoleId");
                    //初始化
                    $.each(data, function (n, item) {
                        var selected = false;
                        if (item.id == @Model.RoleId) {
                            selected = true;
                        }
                        var opt = new Option(item.id + "---" + item.name, item.id, selected);
                        sel.options.add(opt);
                    });
                }
            );
        }

        function save() {
            var url = "/Users/Save2";
            var sex = Boolean(parseInt($("input[name = 'Sex']:checked").val()));
            $.post(
                url,
                {
                    Id: $("#Id").val(),
                    UserName: $("#UserName").val(),
                    Password: $("#Password").val(),
                    NickName: $("#NickName").val(),
                    RoleId: $("#RoleId").val(),
                },
                function (data, status) {
                    //debugger;
                    if (status == "success") {
                        if (data == "Success") {
                            window.close();
                        } else {
                            window.alert(data);
                        }
                    } else {
                        window.alert("访问异常");
                    }
                    console.log("数据: \n" + data + "\n状态: " + status);
                }
            );
        }
    </script>
</head>
<body>
    <div class="container_12">
        <div class="grid_12">
            <div class="box round first fullpage">
                <h2>编辑用户信息</h2>
                <div class="block ">
                    
                    <input type="hidden" name="Id" id="Id" value="@Model.Id" />
                    <table class="form">
                        <tr>
                            <td class="col1">
                                <label>用户名</label>
                            </td>
                            <td class="col2">
                                <input type="text" id="UserName" name="UserName" value="@Model.UserName" />
                            </td>
                        </tr>
                        <tr>
                            <td class="col1">
                                <label>密码</label>
                            </td>
                            <td class="col2">
                                <input type="password" id="Password" name="Password" placeholder="留空不做修改"/>
                            </td>
                        </tr>
                        <tr>
                            <td class="col1">
                                <label>昵称</label>
                            </td>
                            <td class="col2">
                                <input type="text" id="NickName" name="NickName" value="@Model.NickName" />
                            </td>
                        </tr>
                        <tr>

                            <td class="col1">
                                <label>用户权限</label>
                            </td>
                            <td class="col2">
                                <select id="RoleId" name="RoleId">
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label>最后登录时间</label>
                            </td>
                            <td>
                                <input disabled=disabled type="datetime" name="LastLogin" id="LastLogin" value="@Model.LastLogin" />
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <button class="btn btn-blue" id="btnSave">Save</button>
                                <button class="btn btn-grey" name="Reset" id="Reset">Reset</button>
                            </td>
                        </tr>
                    </table>
                    
                </div>
            </div>
        </div>
    </div>
</body>
</html>
